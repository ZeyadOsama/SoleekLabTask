<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context="com.zeyad.soleeklabtask.views.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/activity_main_rv_countries"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/activity_main_btn_sign_out"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        tools:listitem="@layout/item_country" />


    <Button
        android:id="@+id/activity_main_btn_sign_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_quad"
        android:layout_marginTop="@dimen/margin_double"
        android:background="@drawable/background_rounded_red"
        android:paddingStart="@dimen/margin_quad"
        android:paddingEnd="@dimen/margin_quad"
        android:text="@string/command_sign_out"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_double"
        android:textStyle="bold" />


</RelativeLayout>